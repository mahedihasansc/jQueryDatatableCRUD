@model CRUDJQueryDataTables.Models.Employee

<h2>Delete Employee</h2>
@using (Html.BeginForm("delete", "Employee", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.Id)
    <div class="form-group">
        <label>Name</label>
        <p>@Model.fName  @Model.lName</p>
    </div>

    <div class="form-group">
        <label>Email</label>
        <p>@Model.Email</p>
    </div>

    <div class="form-group">
        <label>City</label>
        <p>@Model.City</p>
    </div>

    <div class="form-group">
        <label>Country</label>
        <p>@Model.Country</p>
    </div>

    <div>
        <input class="btn btn-danger" type="submit" value="Delete" />
    </div>
}
